{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "expect": true,
        "test": true,
        "beforeEach": true,
        "afterEach": true,
        "beforeAll": true,
        "afterAll": true
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "arrow-body-style": "off"
    }
}
